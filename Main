
package application;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;


public class Main extends Application {
	@Override
	public void start(Stage primaryStage) {
		try {
			BorderPane root = new BorderPane();
			Scene scene = new Scene(root,400,400);
			primaryStage.setScene(scene);
			primaryStage.setTitle("MyBudgeter");
			primaryStage.show();
			
			showHomePage(primaryStage);
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	private void showHomePage(Stage primaryStage) {
        Button accountButton = new Button("Create New Account");
        accountButton.setOnAction(e -> showNewAccountPage(primaryStage));

        StackPane layout = new StackPane();
        layout.getChildren().add(accountButton);

        Scene homeScene = new Scene(layout, 300, 200);
        primaryStage.setScene(homeScene);
        primaryStage.show();
    }

    private void showNewAccountPage(Stage primaryStage) {
        NewAccountPage newAccountPage = new NewAccountPage();
        Scene accountScene = new Scene(newAccountPage.getLayout(), 400, 300);
        primaryStage.setScene(accountScene);
    }
	
	public static void main(String[] args) {
		launch(args);
	}
}
